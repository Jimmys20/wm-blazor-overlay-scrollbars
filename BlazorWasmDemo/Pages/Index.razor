    public async void MyConstroy() 
    {
        await theOverlay.Constroy();
    }

    public async void MyDestroy() 
    {
        await theOverlay.Destroy();
    }

    public async void MyUpdate() 
    {
        await theOverlay.Update(true);
    }

    public async void MyScroll(string x, string y) 
    {
        await theOverlay.Scroll(x, y);
    }

    public async void MyScroll(int x, int y) 
    {
        await theOverlay.Scroll(x, y);
    }

