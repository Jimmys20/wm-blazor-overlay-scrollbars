@code {
    public WMBOSConfigurations configurations;
    public BlazorOverlayScrollbars theOverlay;
    public bool showAll = false;

    protected override void OnInitialized()
    {
        configurations = new WMBOSConfigurations {
            className = "os-theme-block-dark",
            themePath = "https://kingsora.github.io/OverlayScrollbars/etc/os-theme-block-dark.css",
            resize = "both"
        };
        configurations.overflowBehavior.x = "hidden";
    }

    public void ToggleContentSize() {
        showAll = !showAll;
    }

