@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <div class="main">
        <BlazorOverlayScrollbars Configurations="configurations">
            <BlazorOverlayScrollbarsContent>
                <div class="top-row px-4">
                    <a href="https://github.com/welisonmenezes/wm-blazor-overlay-scrollbars" target="_blank" class="ml-md-auto">Github Repository</a>
                </div>
                <div class="content px-4">
                    @Body
                </div>
            </BlazorOverlayScrollbarsContent>
            <BlazorOverlayScrollbarsLoading>
                <b>Carregando...</b>
            </BlazorOverlayScrollbarsLoading>
        </BlazorOverlayScrollbars>
    </div>
</div>

@code {
    public WMBOSConfigurations configurations;

    protected override void OnInitialized()
    {
        configurations = new WMBOSConfigurations {
            className = "os-my-custom-template",
            themePath = "css/os-my-custom-template.css"
        };
    }
}
